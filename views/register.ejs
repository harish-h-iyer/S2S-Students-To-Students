<%- include('partials/header'); -%>

<div class="" style="text-align: center;">
    <h1 style="padding-top: 1%;">Sign Up!</h1>

    <form action="/register" method="POST" class="form-group row">
     <div class="col-lg-6" style="padding-right: 0%;">  
        <div class="form-group row" style="width: 30%; margin: 0 auto;">
            <label for="inputUsername" class="col-form-label" style="padding-right: 50px; font-size: 15px;">Username</label>
            <div class="col-sm-20">
              <input type="text" class="form-control" name="username" id="inputUsername" placeholder="Type your username">
            </div>
          </div>
          <div class="form-group row" style="width: 30%; margin: 0 auto;">
            <label for="inputPassword3" class=" col-form-label" style="padding-right: 50px; font-size: 15px;">Password</label>
            <div class="col-sm-20">
              <input type="password" class="form-control" name="password" id="inputPassword3" placeholder="Password">
            </div>
          </div>
          <div class="form-group row" style="width: 30%; margin: 0 auto;">
            <label for="inputFName" class=" col-form-label" style="padding-right: 50px; font-size: 15px;">First Name</label>
            <div class="col-sm-20">
              <input type="text" class="form-control" name="firstName" id="inputFName" placeholder="First Name">
            </div>
          </div>
          <div class="form-group row" style="width: 30%; margin: 0 auto;">
            <label for="inputLName" class=" col-form-label" style="padding-right: 50px; font-size: 15px;">Last Name</label>
            <div class="col-sm-20">
              <input type="text" class="form-control" name="lastName" id="inputLName" placeholder="Last Name">
            </div>
          </div>
          <div class="form-group row" style="width: 30%; margin: 0 auto;">
             <label for="inputEmail" class=" col-form-label" style="padding-right: 50px; font-size: 15px;">Email ID</label>
            <div class="col-sm-20">
              <input type="email" class="form-control" name="email" id="inputEmail" placeholder="Email id">
            </div>
          </div>
      </div>
      <div class="col-lg-6" style="padding-left: 0%;">
        <div class="form-group row" style="width: 30%; margin: 0 auto;">
          <label for="inputPhNo" class=" col-form-label" style="padding-right: 50px; font-size: 15px;">Phone Number</label>
          <div class="col-sm-20">
            <input type="text" class="form-control" name="phoneno" id="inputPhNo" placeholder="Phone Number">
          </div>
        </div>
        <div class="form-group row" style="width: 30%; margin: 0 auto;">
          <label for="inputUpi" class=" col-form-label" style="padding-right: 50px; font-size: 15px;">UPI Id</label>
          <div class="col-sm-20">
            <input type="text" class="form-control" name="upiId" id="inputUpi" placeholder="Upi ID">
          </div>
        </div>
        <div class="form-group row" style="width: 30%; margin: 0 auto;">
          <label for="inputStudyin" class=" col-form-label" style="padding-right: 50px; font-size: 15px;">Year of Study</label>
          <div class="col-sm-20">
            <input type="text" class="form-control" name="studyin" id="inputStudyin" placeholder="Studying in year">
          </div>
        </div>
        <div class="form-group row" style="width: 30%; margin: 0 auto;">
          <label for="inputBatch" class="col-form-label" style="padding-right: 50px; font-size: 15px;">Batch No.</label>
          <div class="col-sm-20">
            <input type="text" class="form-control" name="batch" id="inputBatch" placeholder="2016-2020">
          </div>
        </div>
        <div class="form-group row" style="width: 30%; margin: 0 auto;">
          <label for="inputHostel" class="col-form-label" style="padding-right: 50px; font-size: 15px;">Hostel Name</label>
          <div class="col-sm-20">
            <input type="text" class="form-control" name="hostel" id="inputHostel" placeholder="Hostel Name">
          </div>
        </div>
      </div> 
        <div class="form-group row" style="width: 30%; margin: 0 auto; padding-top: 3%;">
            <div class="col-sm-10">
              <button type="submit" class="btn btn-primary">Sign in</button>
            </div>
          </div>   
    </form>

</div>
<%- include('partials/footer'); -%>
