<%- include('partials/header'); -%>

<div class="container" style="text-align: center;">

    <img src="/images/logo.png" alt="" width="250" height="100">


    <h1 style="padding-top: 3%;">Login!</h1>

    <form action="/login" method="POST" class="form-group">
        <div class="form-group row" style="width: 30%; margin: 0 auto;">
          <label for="inputEmail3" class="col-sm-2 col-form-label" style="padding-right: 50px; font-size: 25px;">Username</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="username" id="inputEmail3" placeholder="Type your Username">
          </div>
        </div>
        <div class="form-group row" style="width: 30%; margin: 0 auto;">
          <label for="inputPassword3" class="col-sm-2 col-form-label" style="padding-right: 50px; font-size: 25px;">Password</label>
          <div class="col-sm-10">
            <input type="password" class="form-control" name="password" id="inputPassword3" placeholder="Password">
          </div>
        </div>
        <div class="form-group row" style="width: 30%; margin: 0 auto; padding-top: 3%;">
            <div class="col-sm-10">
              <button type="submit" class="btn btn-primary">Login</button>
            </div>
          </div>

    </form>

</div>

<%- include('partials/footer'); -%>